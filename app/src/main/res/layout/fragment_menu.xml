<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_new_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="سفارش جدید"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_input_add"
        app:iconGravity="textStart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="مشاهده سفارش ها"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_menu_view"
        app:iconGravity="textStart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="محصولات"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_menu_sort_by_size"
        app:iconGravity="textStart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_customers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:text="مشتری ها"
        android:textSize="18sp"
        app:icon="@android:drawable/ic_menu_myplaces"
        app:iconGravity="textStart"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

</LinearLayout> 